{
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.js"],
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "models/**/*.js",
    "services/**/*.js",
    "utils/**/*.js",
    "middlewares/**/*.js",
    "routes/**/*.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "maxWorkers": 1,
  "testTimeout": 30000
}
